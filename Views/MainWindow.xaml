<Window x:Class="Plustek.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plustek Syrian ID Scanner" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F8FBF8">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Header -->
		<Border Grid.Row="0" Background="#1B5E20" Padding="20" CornerRadius="12" Margin="0,0,0,20">
			<StackPanel>
				<TextBlock Text="PLUSTEK SYRIAN ID SCANNER"
                           FontSize="26" FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
				<TextBlock Text="Professional Document Scanning System"
                           FontSize="12"
                           Foreground="#A5D6A7"
                           HorizontalAlignment="Center"
                           FontWeight="Light"/>
			</StackPanel>
		</Border>

		<!-- Main Content -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="20"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Left Panel - Images -->
			<Grid Grid.Column="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="20"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<!-- Front Face -->
				<Border Grid.Row="0" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="10" Background="White">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>

						<Border Grid.Row="0" Background="#4CAF50" CornerRadius="8,8,0,0">
							<TextBlock Text="FRONT FACE"
                                       FontSize="16" FontWeight="SemiBold"
                                       Padding="15,10"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
						</Border>

						<Border Grid.Row="1" Background="#FAFAFA" Margin="4" CornerRadius="0,0,6,6">
							<Grid>
								<!-- Placeholder when no image -->
								<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Visibility="{Binding FrontFacePlaceholderVisible}">
									<TextBlock Text="ðŸ“„" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
									<TextBlock Text="No Image Scanned"
                                               FontSize="16"
                                               Foreground="#9E9E9E"
                                               HorizontalAlignment="Center"/>
								</StackPanel>

								<!-- Actual image -->
								<Image x:Name="FrontFaceImage"
                                       Source="{Binding FrontFaceImage}"
                                       Stretch="Uniform"
                                       Margin="15"/>
							</Grid>
						</Border>
					</Grid>
				</Border>

				<!-- Back Face -->
				<Border Grid.Row="2" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="10" Background="White">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>

						<Border Grid.Row="0" Background="#4CAF50" CornerRadius="8,8,0,0">
							<TextBlock Text="BACK FACE"
                                       FontSize="16" FontWeight="SemiBold"
                                       Padding="15,10"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
						</Border>

						<Border Grid.Row="1" Background="#FAFAFA" Margin="4" CornerRadius="0,0,6,6">
							<Grid>
								<!-- Placeholder when no image -->
								<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Visibility="{Binding BackFacePlaceholderVisible}">
									<TextBlock Text="ðŸ“„" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
									<TextBlock Text="No Image Scanned"
                                               FontSize="16"
                                               Foreground="#9E9E9E"
                                               HorizontalAlignment="Center"/>
								</StackPanel>

								<!-- Actual image -->
								<Image x:Name="BackFaceImage"
                                       Source="{Binding BackFaceImage}"
                                       Stretch="Uniform"
                                       Margin="15"/>
							</Grid>
						</Border>
					</Grid>
				</Border>
			</Grid>

			<!-- Right Panel - Data -->
			<Grid Grid.Column="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<!-- Data Section Header -->
				<Border Grid.Row="0" Background="#4CAF50" CornerRadius="10,10,0,0" Margin="0,0,0,0">
					<TextBlock Text="ID CARD DATA"
                               FontSize="16" FontWeight="SemiBold"
                               Padding="15,10"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
				</Border>

				<!-- Data Fields -->
				<Border Grid.Row="1" BorderBrush="#4CAF50" BorderThickness="2,0,2,2" CornerRadius="0,0,10,10" Background="White">
					<ScrollViewer VerticalScrollBarVisibility="Auto">
						<StackPanel Margin="20,15" IsEnabled="{Binding HasData}">
							<!-- National ID -->
							<TextBlock Text="National ID Number" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#1B5E20"/>
							<TextBox Text="{Binding NationalId, Mode=TwoWay}"
                                     Padding="12" Margin="0,0,0,18" FontSize="14"
                                     Background="White" BorderBrush="#C8E6C9" BorderThickness="2"/>

							<!-- First Name -->
							<TextBlock Text="First Name (Ø§Ù„Ø§Ø³Ù…)" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#1B5E20"/>
							<TextBox Text="{Binding FirstName, Mode=TwoWay}"
                                     Padding="12" Margin="0,0,0,18" FontSize="14"
                                     FlowDirection="RightToLeft"
                                     Background="White" BorderBrush="#C8E6C9" BorderThickness="2"/>

							<!-- Father Name -->
							<TextBlock Text="Father Name (Ø§Ø³Ù… Ø§Ù„Ø£Ø¨)" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#1B5E20"/>
							<TextBox Text="{Binding FatherName, Mode=TwoWay}"
                                     Padding="12" Margin="0,0,0,18" FontSize="14"
                                     FlowDirection="RightToLeft"
                                     Background="White" BorderBrush="#C8E6C9" BorderThickness="2"/>

							<!-- Mother Name -->
							<TextBlock Text="Mother Name (Ø§Ø³Ù… Ø§Ù„Ø£Ù…)" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#1B5E20"/>
							<TextBox Text="{Binding MotherName, Mode=TwoWay}"
                                     Padding="12" Margin="0,0,0,18" FontSize="14"
                                     FlowDirection="RightToLeft"
                                     Background="White" BorderBrush="#C8E6C9" BorderThickness="2"/>

							<!-- Last Name -->
							<TextBlock Text="Last Name (Ø§Ù„ÙƒÙ†ÙŠØ©)" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#1B5E20"/>
							<TextBox Text="{Binding LastName, Mode=TwoWay}"
                                     Padding="12" Margin="0,0,0,18" FontSize="14"
                                     FlowDirection="RightToLeft"
                                     Background="White" BorderBrush="#C8E6C9" BorderThickness="2"/>

							<!-- Birth Info -->
							<TextBlock Text="Place and Date of Birth" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#1B5E20"/>
							<TextBox Text="{Binding BirthInfo, Mode=TwoWay}"
                                     Padding="12" Margin="0,0,0,18" FontSize="14"
                                     FlowDirection="RightToLeft"
                                     Background="White" BorderBrush="#C8E6C9" BorderThickness="2"/>

							<!-- Scanned At -->
							<TextBlock Text="Scanned At" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#1B5E20"/>
							<TextBox Text="{Binding ScannedAt, Mode=TwoWay}"
                                     Padding="12" Margin="0,0,0,0" FontSize="14"
                                     Background="#F1F8E9" BorderBrush="#C8E6C9" BorderThickness="2" IsReadOnly="True"/>
						</StackPanel>
					</ScrollViewer>
				</Border>

				<!-- Status Message -->
				<Border Grid.Row="2"
                        Background="{Binding StatusBackground}"
                        Padding="15"
                        CornerRadius="10"
                        Margin="0,15,0,0"
                        Visibility="{Binding StatusVisible}">
					<TextBlock Text="{Binding StatusMessage}"
                               FontSize="14"
                               Foreground="White"
                               TextWrapping="Wrap"
                               FontWeight="Medium"/>
				</Border>
			</Grid>
		</Grid>

		<!-- Bottom Buttons -->
		<Grid Grid.Row="2" Margin="0,20,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="15"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="15"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="15"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Scan Button -->
			<Button Grid.Column="0"
                    Content="SCAN"
                    FontSize="16"
                    FontWeight="Bold"
                    Height="55"
                    Background="#2E7D32"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ScanButton_Click"
                    IsEnabled="{Binding IsScanEnabled}">
				<Button.Style>
					<Style TargetType="Button">
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="Button">
									<Border Background="{TemplateBinding Background}"
                                            CornerRadius="10"
                                            BorderThickness="0">
										<ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#388E3C"/>
							</Trigger>
							<Trigger Property="IsEnabled" Value="False">
								<Setter Property="Background" Value="#BDBDBD"/>
								<Setter Property="Foreground" Value="#757575"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>

			<!-- Export Button -->
			<Button Grid.Column="2"
                    Content="EXPORT"
                    FontSize="16"
                    FontWeight="Bold"
                    Height="55"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ExportButton_Click">
				<Button.Style>
					<Style TargetType="Button">
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="Button">
									<Border Background="{TemplateBinding Background}"
                                            CornerRadius="10"
                                            BorderThickness="0">
										<ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#66BB6A"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>

			<!-- Reset Button -->
			<Button Grid.Column="4"
                    Content="RESET"
                    FontSize="16"
                    FontWeight="Bold"
                    Height="55"
                    Background="#81C784"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ResetButton_Click">
				<Button.Style>
					<Style TargetType="Button">
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="Button">
									<Border Background="{TemplateBinding Background}"
                                            CornerRadius="10"
                                            BorderThickness="0">
										<ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#A5D6A7"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>

			<!-- Cancel Button -->
			<Button Grid.Column="6"
                    Content="CANCEL"
                    FontSize="16"
                    FontWeight="Bold"
                    Height="55"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click">
				<Button.Style>
					<Style TargetType="Button">
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="Button">
									<Border Background="{TemplateBinding Background}"
                                            CornerRadius="10"
                                            BorderThickness="0">
										<ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#616161"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>
		</Grid>
	</Grid>
</Window>